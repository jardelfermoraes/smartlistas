# ===========================================
# SmartListas - Configuração de Ambiente
# ===========================================

# Database
# Para desenvolvimento local com Docker:
DATABASE_URL=postgresql+psycopg2://melhor:compra@db:5432/melhorcompra

# Para Supabase (substitua pelos seus dados):
# DATABASE_URL=postgresql+psycopg2://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-sa-east-1.pooler.supabase.com:6543/postgres

# Redis
REDIS_URL=redis://redis:6379/0

# App
ENV=development
LOG_LEVEL=INFO
QUEUE_NAME=receipts
DEBUG=false

# Security
SECRET_KEY=change-me-in-production

# CORS
# Em produção, inclua o domínio do painel web (smartlistas.com.br)
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","https://smartlistas.com.br"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
